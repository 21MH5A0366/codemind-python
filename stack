Stack::

string reverseWord(string str){
    stack<char>sai;
    for(int i=0;i<str.size();i++){
        sai.push(str[i]);
    }
    str.clear(); 
    while(!sai.empty()){
        str+=sai.top();
        sai.pop();  
    }
    return str;  
}


